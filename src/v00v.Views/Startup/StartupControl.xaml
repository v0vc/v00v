<UserControl
    x:Class="v00v.Views.Startup.StartupControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:v00v.Views.Controls"
    >

    <Border BorderThickness="1" BorderBrush="#bdacd1">
        <Panel>
            <Grid ColumnDefinitions="32,auto,auto" RowDefinitions="auto,auto,auto,*,25,25,25,25,25,25">

                <StackPanel Grid.Column="1" Grid.Row ="0" Margin="0,10,0,0" Orientation="Horizontal">
                    <Panel>
                        <Ellipse />
                        <Image Source="resm:v00v.MainApp.Icons.Light.Plus32.png?assembly=v00v.MainApp" />
                    </Panel>
                    <TextBlock Text="Add" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row ="1" Margin="0,10,0,0" Orientation="Horizontal">
                    <Panel>
                        <Ellipse />
                        <Image Source="resm:v00v.MainApp.Icons.Light.Settings32.png?assembly=v00v.MainApp" />
                    </Panel>
                    <TextBlock Text="Synchronize" Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="2" Margin="3,15,0,0" Orientation="Horizontal">
                    <CheckBox IsChecked="{Binding ShowSettings, Mode=TwoWay}"/>
                    <TextBlock Text="Show settings" Margin="12,0,0,0"/>
                </StackPanel>

                <Grid Grid.Column="1" Grid.Row ="3" RowDefinitions="40,25,2,25,20,25,2,25,2,25,40,25,2,25" IsVisible="{Binding ShowSettings, Mode=OneWay}">

                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <TextBlock Text="Directory:"/>
                        <TextBox Width="346" Margin="16,0,0,0" Watermark="Select..." Text="{Binding BaseDir, Mode=TwoWay}" IsReadOnly="True"/>
                        <Button Width="30" Content=">>" Margin="2,0,0,0" Name="SelectFolder"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Row="3">
                        <TextBlock Text="Player:"/>
                        <TextBox Width="346" Margin="32,0,0,0" Watermark="Select path to mpc-be..." Text="{Binding WatchApp, Mode=TwoWay}" IsReadOnly="True"/>
                        <Button Width="30" Content=">>" Margin="2,0,0,0" Name="OpenFile"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Row="5">
                        <TextBlock Text="Schedulers:"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="7">
                        <CheckBox Margin="0,0,4,0" IsChecked="{Binding EnableRepeatSchedule, Mode=TwoWay}"/>
                        <TextBlock Text="Repeat sync every (min):"/>
                        <TextBox Width="40" Margin="7,0,0,0" IsEnabled="{Binding EnableRepeatSchedule, Mode=OneWay}"
                                 Text="{Binding RepeatMin, Mode=TwoWay}"
                                 />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Row="9">
                        <CheckBox Margin="0,0,4,0" IsChecked="{Binding EnableDailySchedule, Mode=TwoWay}"/>
                        <TextBlock Text="Repeat sync at (hh:mm):"/>
                        <ComboBox Margin="8,0,3,0" Width="40" IsEnabled="{Binding EnableDailySchedule, Mode=OneWay}"
                                  Items="{Binding Hours, Mode=OneTime}"
                                  SelectedItem="{Binding SelectedHour, Mode=TwoWay}"
                                  />
                        <TextBlock Text=":"/>
                        <ComboBox Margin="2,0,0,0" Width="40" IsEnabled="{Binding EnableDailySchedule, Mode=OneWay}"
                                  Items="{Binding Minutes, Mode=OneTime}"
                                  SelectedItem="{Binding SelectedMinute, Mode=TwoWay}"
                                  />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Row="11">
                        <TextBlock Text="Download:"/>
                        <TextBox Width="346" Margin="10,0,0,0" Watermark="Link..." Text="{Binding DownloadUrl, Mode=TwoWay}"/>
                        <Button Width="30" Content=">>" Margin="2,0,0,0" Command="{Binding DownloadCommand, Mode=OneTime}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Row="13" IsVisible="{Binding IsYoutubeLink, Mode=OneWay}">
                        <TextBlock Text="Options:"/>
                        <ComboBox Margin="23,0,0,0" Width="90" Items="{Binding Formats, Mode=OneTime}"
                                  SelectedItem="{Binding SelectedFormat, Mode=TwoWay}"
                                  />
                        <CheckBox Content="With subtitles" IsChecked="{Binding WithSubs, Mode=TwoWay}" Margin="15,0,0,0" 
                                  IsEnabled="{Binding SubsEnabled, Mode=OneWay}"
                                  />
                    </StackPanel>

                </Grid>

                <TextBlock Grid.Column="1" Grid.Row ="4" Text="* To download video you need to install ffmpeg and youtube-dl. Easy way to do it:" VerticalAlignment="Top"/>

                <controls:ExtendedTextBox Grid.Column="1" Grid.Row="5" IsReadOnly="True" Text="https://chocolatey.org/docs/installation"/>

                <TextBlock Grid.Column="2" Grid.Row ="5" Text="Install chocolatey" Margin="10,0,0,0"/>

                <controls:ExtendedTextBox Grid.Column="1" Grid.Row="6" IsReadOnly="True" Text="choco install ffmpeg" />

                <TextBlock Grid.Column="2" Grid.Row ="6" Text="Install ffmpeg" Margin="10,0,0,0"/>

                <controls:ExtendedTextBox Grid.Column="1" Grid.Row="7" IsReadOnly="True" Text="choco install youtube-dl" />

                <TextBlock Grid.Column="2" Grid.Row ="7" Text="Install youtube-dl" Margin="10,0,0,0"/>

                <controls:ExtendedTextBox Grid.Column="1" Grid.Row="8" IsReadOnly="True" Text="https://www.videohelp.com/software/MPC-BE" />

                <TextBlock Grid.Column="2" Grid.Row ="8" Text="Install mpc-be" Margin="10,0,0,0"/>

            </Grid>
        </Panel>
    </Border>
    

    <UserControl.Styles>

        <!--<Style Selector="Panel:pointerover">
            <Style.Animations>
                <Animation Duration="0:0:2.5"
                           RepeatCount="4"
                           FillMode="None"
                           PlaybackDirection="AlternateReverse"
                           Easing="SineEaseInOut">
                    <KeyFrame Cue="20%">
                        <Setter Property="RotateTransform.Angle" Value="45"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.5"/>
                    </KeyFrame>
                    <KeyFrame Cue="80%">
                        <Setter Property="RotateTransform.Angle" Value="120"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>-->

        <Style Selector="Panel /template/ Border">
            <Setter Property="CornerRadius" Value="3" />
        </Style>

        <Style Selector="Panel">
            <Setter Property="Background" Value="#E6E6FA" />
        </Style>

        <Style Selector="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#242e44" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <Style Selector="Image">
            <Setter Property="Width" Value="14" />
            <Setter Property="Height" Value="14" />
            <Setter Property="Opacity" Value="0.8" />
        </Style>

        <Style Selector="Ellipse">
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
            <Setter Property="Fill" Value="#435270" />
            <Setter Property="Opacity" Value="0.8" />
        </Style>

    </UserControl.Styles>

</UserControl>
