<UserControl
    x:Class="v00v.Views.Startup.StartupControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:v00v.Views.Controls"
    >

    <Border BorderThickness="1" BorderBrush="#bdacd1">
        <Panel>
            <Grid ColumnDefinitions="32,auto,auto" RowDefinitions="auto,auto,*,30,30,30,30,30">
                <Panel Grid.Column="0" Margin="10,10,0,0">
                    <Ellipse />
                    <Image Source="resm:v00v.MainApp.Icons.Light.Plus32.png?assembly=v00v.MainApp" />
                </Panel>
                <TextBlock Grid.Column="1" Text="Add" Margin="10,10,0,0"/>
                <Panel Grid.Column="0" Grid.Row ="1" Margin="10,10,0,0">
                    <Ellipse />
                    <Image Source="resm:v00v.MainApp.Icons.Light.Settings32.png?assembly=v00v.MainApp" />
                </Panel>
                <TextBlock Grid.Column="1" Grid.Row ="1" Text="Synchronize" Margin="10,10,0,0"/>

                <TextBlock Grid.Column="1" Grid.Row ="3" Text="* To download video you need to install ffmpeg and youtube-dl. Easy way to do it:" VerticalAlignment="Top"/>

                <controls:ExtendedTextBox Grid.Column="1" Grid.Row="4"
                                          IsReadOnly="True" Text="https://chocolatey.org/docs/installation" />
                <TextBlock Grid.Column="2" Grid.Row ="4" Text="Install chocolatey" Margin="10,0,0,0"/>

                <controls:ExtendedTextBox Grid.Column="1" Grid.Row="5"
                                          IsReadOnly="True" Text="choco install ffmpeg" />
                <TextBlock Grid.Column="2" Grid.Row ="5" Text="Install ffmpeg" Margin="10,0,0,0"/>

                <controls:ExtendedTextBox Grid.Column="1" Grid.Row="6"
                                          IsReadOnly="True" Text="choco install youtube-dl" />
                <TextBlock Grid.Column="2" Grid.Row ="6" Text="Install youtube-dl" Margin="10,0,0,0"/>
                
            </Grid>
        </Panel>
    </Border>
    

    <UserControl.Styles>

        <!--<Style Selector="Panel:pointerover">
            <Style.Animations>
                <Animation Duration="0:0:2.5"
                           RepeatCount="4"
                           FillMode="None"
                           PlaybackDirection="AlternateReverse"
                           Easing="SineEaseInOut">
                    <KeyFrame Cue="20%">
                        <Setter Property="RotateTransform.Angle" Value="45"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.5"/>
                    </KeyFrame>
                    <KeyFrame Cue="80%">
                        <Setter Property="RotateTransform.Angle" Value="120"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>-->

        <Style Selector="Panel /template/ Border">
            <Setter Property="CornerRadius" Value="3" />
        </Style>

        <Style Selector="Panel">
            <Setter Property="Background" Value="#E6E6FA" />
        </Style>

        <Style Selector="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#242e44" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <Style Selector="Image">
            <Setter Property="Width" Value="14" />
            <Setter Property="Height" Value="14" />
            <Setter Property="Opacity" Value="0.8" />
        </Style>

        <Style Selector="Ellipse">
            <Setter Property="Width" Value="24" />
            <Setter Property="Height" Value="24" />
            <Setter Property="Fill" Value="#435270" />
            <Setter Property="Opacity" Value="0.8" />
        </Style>

    </UserControl.Styles>

</UserControl>